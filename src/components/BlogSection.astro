---
import BookIcon from "./icons/BookIcon.astro";
const posts = await Astro.glob("../pages/blog/*.mdx");
---

<section
  id="blog"
  class="section pt-16 pb-32 md:pt-34 md:pb-32 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl flex flex-col gap-2"
>
  <h2
    class="flex items-center mb-4 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white undefined"
  >
    <BookIcon class="size-8" />Articulos de mi Blog
  </h2>
  <ul>
    <ul class="flex flex-col gap-8">
      {
        posts.map((post) => (
          <li>
            <a href={post.url}>
              <div class="p-2 backdrop:blur-xl rounded-lg shadow-lg shadow-light-secondary dark:shadow-dark-secondary border flex flex-col gap-4 hover:border-light-secondary dark:hover:border-dark-secondary transition-all hover:scale-105">
                <p class="text-2xl font-bold">{post.frontmatter.title}</p>
                <p class="">{post.frontmatter.description}</p>
                <p class="text-gray-600 text-sm dark:text-gray-400">
                  {post.frontmatter.date}
                </p>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </ul>
</section>
